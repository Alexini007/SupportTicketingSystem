@model SupportTicketingSystem.Data.Ticket

<h2 class="text-center mt-4">Edit Ticket</h2>

<div class="container d-flex justify-content-center">
    <form asp-action="Edit" method="post" class="w-100 w-md-50 w-lg-25 mx-auto">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Subject" class="form-label"></label>
            <input asp-for="Subject" class="form-control" />
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Team" class="form-label"></label>
            <select asp-for="Team" class="form-select">
                <option value="Development">Development</option>
                <option value="Support">Support</option>
                <option value="Sales">Sales</option>
            </select>
            <span asp-validation-for="Team" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Status" class="form-label"></label>
            <select asp-for="Status" class="form-select">
                <option value="new">New</option>
                <option value="open">Open</option>
                <option value="closed">Closed</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-success">Save Changes</button>
        </div>
    </form>
</div>
