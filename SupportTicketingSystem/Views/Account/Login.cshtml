@model LoginViewModel

<h2 class="text-center">Login</h2>

<div class="container d-flex justify-content-center">
    <form asp-action="Login" method="post" class="w-50">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" />
        </div>

        <button type="submit" class="btn custom-register-btn mt-2">Login</button>

        <div asp-validation-summary="All" class="text-danger"></div>

        <p class="mt-3">
            If you do not have an account created, <a asp-controller="Account" asp-action="Register">register here!</a>
        </p>
    </form>
</div>

<style>
    .custom-register-btn {
        background-color: #6767d6 !important;
        color: white !important;
        border: none;
        padding: 10px 20px;
        transition: background-color 0.3s ease-in-out;
    }

    .custom-register-btn:hover {
            background-color: #5757c6 !important;
    }

    .container {
        max-width: 800px; 
    }
</style>
