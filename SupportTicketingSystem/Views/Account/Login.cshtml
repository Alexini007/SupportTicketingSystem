@model LoginViewModel

<h2 class="text-center mt-5">Login</h2>

<div class="container d-flex justify-content-center">
    <form asp-action="Login" method="post" class="w-100 w-md-75 w-lg-50 mx-auto">
        <div class="form-group mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" type="password" class="form-control" />
        </div>

        <div class="d-grid">
            <button type="submit" class="btn custom-register-btn">Login</button>
        </div>

        <div asp-validation-summary="All" class="text-danger mt-2"></div>

        <p class="mt-3 text-center">
            If you do not have an account created, <a asp-controller="Account" asp-action="Register">Register here!</a>
        </p>
    </form>
</div>

<style>
    .container{
        max-width:400px;
    }
    .custom-register-btn {
        background-color: #6767d6 !important;
        color: white !important;
        border: none;
        padding: 10px 20px;
        transition: background-color 0.3s ease-in-out;
    }

        .custom-register-btn:hover {
            background-color: #5757c6 !important;
        }
</style>
